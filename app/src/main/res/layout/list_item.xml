<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layoutDirection="ltr"
    >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"

        android:id="@+id/list_item_image_view"
        android:src="@mipmap/ic_launcher" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_toRightOf="@id/list_item_image_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#02138f"
        android:id="@+id/list_item_list_text_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1929"
        android:layout_below="@id/list_item_list_text_view"
        android:layout_alignLeft="@id/list_item_list_text_view"
        android:layout_marginLeft="16dp"
        android:textStyle="italic"
        android:textColor="#02138f"
        android:id="@+id/list_item_year_text_view"
        />


</RelativeLayout>