<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vetal.movieswiththreads">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movies"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ResultsActivity" />
        <activity android:name=".activities.DesctriptionActivity" />
        <activity android:name=".activities.SeeTrailer" />
        <activity android:name=".activities.MyAppActivities" />
        <activity android:name=".activities.SeeMySearches" />
        <activity android:name=".activities.SeeMyRatings"></activity>
    </application>

</manifest>